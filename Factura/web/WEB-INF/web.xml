<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>RegistrarCliente.do</servlet-name>
        <servlet-class>Servlet.RegistrarCliente</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Factura</servlet-name>
        <servlet-class>Servlet.Factura</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegistrarArticulo</servlet-name>
        <servlet-class>Servlet.RegistrarArticulo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ModificarF</servlet-name>
        <servlet-class>Servlet.ModificarF</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Actualizar</servlet-name>
        <servlet-class>Servlet.Actualizar</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ActualizarF</servlet-name>
        <servlet-class>Servlet.ActualizarF</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegistrarCliente.do</servlet-name>
        <url-pattern>/RegistrarCliente</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Factura</servlet-name>
        <url-pattern>/Factura</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegistrarArticulo</servlet-name>
        <url-pattern>/RegistrarArticulo</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ModificarF</servlet-name>
        <url-pattern>/ModificarF</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Actualizar</servlet-name>
        <url-pattern>/Actualizar</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ActualizarF</servlet-name>
        <url-pattern>/ActualizarF</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
